<div class="jumbotron">

    <h1 class="display-4">Eat-Da-Burger!</h1>

    {{!-- insert image --}}

</div>

<div class="container">

    <h3>Available Burgers</h3>

    <ul>
        {{#each burgers}}
            {{#unless devoured}}
            <li>

                <div class="buger-name">{{this.name}}</div>
                <button data-id="{{this.id}}" class="deleteBurger">Devour it!</button>

            </li>
            {{/unless}}

        {{/each}}
    </ul>

    <h3>Eaten burger</h3>

    <ul>

        {{#each burgers}}

            {{#if devoured}}

            <div>{{this.name}}</div>

            {{/if}}
        {{/each}}
    </ul>

    <form class="create-form">

        <div class="form-group">

            <input type="text" id="createBurger" name="name" placeholder="Make a burger!">

        </div>

        <button type="submit">Create Burger!</button>
    </form>

</div>